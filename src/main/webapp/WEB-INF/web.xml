<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Exemple d'Application Web</display-name>
    
    <context-param>
        <param-name>user</param-name>
        <param-value>postgres</param-value>
    </context-param>

    <context-param>
        <param-name>password</param-name>
        <param-value>secret</param-value>
    </context-param>

    <context-param>
        <param-name>nameBDD</param-name>
        <param-value>exemple</param-value>
    </context-param>

    <context-param>
        <param-name>host</param-name>
        <param-value>192.168.99.100</param-value>
    </context-param>

    <context-param>
        <param-name>port</param-name>
        <param-value>5432</param-value>
    </context-param>

    <listener>
        <listener-class>fr.iat.facturation.service.ServletListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>ListeClients</servlet-name>
        <servlet-class>fr.iat.facturation.ListeClients</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>fr.iat.facturation.Update</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>fr.iat.facturation.Delete</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Create</servlet-name>
        <servlet-class>fr.iat.facturation.Create</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListeClients</servlet-name>
        <url-pattern>/clients.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Create</servlet-name>
        <url-pattern>/create.jsp</url-pattern>
    </servlet-mapping>

</web-app>
